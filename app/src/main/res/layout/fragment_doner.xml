<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightGrey"
    tools:context=".view.fragment.DonerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_10"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:src="@drawable/donor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/size_15"
                android:textSize="@dimen/medium_text"
                android:textColor="@color/colorLightRed"
                android:text="Donor List"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bg_a_p"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/size_5"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginTop="@dimen/size_5"
                android:background="@drawable/bg_light_grey_5"
                android:elevation="3dp"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/small_text"
                android:text="A+"/>

            <TextView
                android:id="@+id/bg_a_n"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:layout_margin="@dimen/size_5"
                android:background="@drawable/bg_light_grey_5"
                android:elevation="3dp"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/small_text"
                android:text="A-"/>

            <TextView
                android:id="@+id/bg_b_p"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:layout_margin="@dimen/size_5"
                android:background="@drawable/bg_light_grey_5"
                android:elevation="3dp"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/small_text"
                android:text="B+"/>

            <TextView
                android:id="@+id/bg_b_n"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginStart="@dimen/size_5"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginEnd="@dimen/size_10"
                android:background="@drawable/bg_light_grey_5"
                android:elevation="3dp"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/small_text"
                android:text="B-"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bg_ab_p"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/size_5"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginTop="@dimen/size_5"
                android:background="@drawable/bg_light_grey_5"
                android:elevation="3dp"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/small_text"
                android:text="AB+"/>

            <TextView
                android:id="@+id/bg_ab_n"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/size_5"
                android:layout_marginStart="@dimen/size_5"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginTop="@dimen/size_5"
                android:background="@drawable/bg_light_grey_5"
                android:elevation="3dp"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/small_text"
                android:text="AB-"/>

            <TextView
                android:id="@+id/bg_o_p"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/size_5"
                android:layout_marginStart="@dimen/size_5"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginTop="@dimen/size_5"
                android:background="@drawable/bg_light_grey_5"
                android:elevation="3dp"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/small_text"
                android:text="O+"/>

            <TextView
                android:id="@+id/bg_o_n"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginStart="@dimen/size_5"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginTop="@dimen/size_5"
                android:background="@drawable/bg_light_grey_5"
                android:elevation="3dp"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorGrey"
                android:textSize="@dimen/small_text"
                android:text="O-"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_5"
            android:background="@color/colorWhite">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/no_data_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="@dimen/size_100"
                    android:layout_height="@dimen/size_100"
                    android:src="@drawable/donor"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorLightRed"
                    android:textSize="@dimen/normal_text"
                    android:text="No donor found for this blood group"
                    android:fontFamily="@font/bold"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.PostFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textColor="@color/colorLightRed"
                android:textSize="@dimen/medium_text"
                android:text="Post a Blood Request"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45"
                android:background="@drawable/bg_white_5"
                android:fontFamily="@font/regular"
                android:layout_margin="@dimen/size_15"
                android:elevation="3dp"
                android:hint="Enter petient name"
                android:inputType="text"
                android:paddingStart="@dimen/size_15"
                android:paddingEnd="@dimen/size_5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginStart="@dimen/size_15"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/small_text"
                android:text="Choose Blood Group"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:paddingStart="@dimen/size_15"
                android:paddingEnd="@dimen/size_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bg_a_p"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="A+"/>

                <TextView
                    android:id="@+id/bg_a_n"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="A-"/>

                <TextView
                    android:id="@+id/bg_b_p"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="B+"/>

                <TextView
                    android:id="@+id/bg_b_n"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="B-"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_10"
                android:paddingStart="@dimen/size_15"
                android:paddingEnd="@dimen/size_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bg_ab_p"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="AB+"/>

                <TextView
                    android:id="@+id/bg_ab_n"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="AB-"/>

                <TextView
                    android:id="@+id/bg_o_p"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="O+"/>

                <TextView
                    android:id="@+id/bg_o_n"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="O-"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/size_15"
                android:paddingEnd="@dimen/size_15"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/size_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Choose Quantity"/>

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="@dimen/size_35"
                    android:layout_height="@dimen/size_35"
                    android:layout_marginStart="@dimen/size_15"
                    android:src="@drawable/ic_remove"
                    android:padding="3dp"
                    android:background="@drawable/bg_blood"
                    app:tint="@color/colorDarkGrey" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_10"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/normal_text"
                    android:text="0 Bag"/>

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="@dimen/size_35"
                    android:layout_height="@dimen/size_35"
                    android:src="@drawable/ic_add"
                    android:padding="3dp"
                    android:background="@drawable/bg_blood"
                    app:tint="@color/colorDarkGrey" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginStart="@dimen/size_15"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/small_text"
                android:text="Choose Donation Date"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:paddingStart="@dimen/size_15"
                android:paddingEnd="@dimen/size_15"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5">

                    <Spinner
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/date" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5">

                    <Spinner
                        android:id="@+id/month"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/month" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:background="@drawable/storke_grey_5">

                    <Spinner
                        android:id="@+id/year"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:entries="@array/current_year" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginStart="@dimen/size_15"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/small_text"
                android:text="Choose Donation Time Within"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:paddingStart="@dimen/size_15"
                android:paddingEnd="@dimen/size_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/morning"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Morning"/>

                <TextView
                    android:id="@+id/noon"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Noon"/>

                <TextView
                    android:id="@+id/evening"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Evening"/>

                <TextView
                    android:id="@+id/night"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_40"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/size_5"
                    android:background="@drawable/storke_grey_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Night"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginStart="@dimen/size_15"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/small_text"
                android:text="Define Hospital &amp; Location"/>

            <EditText
                android:id="@+id/hospital"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45"
                android:background="@drawable/bg_white_5"
                android:fontFamily="@font/regular"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginStart="@dimen/size_15"
                android:layout_marginEnd="@dimen/size_15"
                android:elevation="3dp"
                android:hint="Enter hospital name"
                android:inputType="text"
                android:paddingStart="@dimen/size_15"
                android:paddingEnd="@dimen/size_5"/>

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45"
                android:background="@drawable/bg_white_5"
                android:fontFamily="@font/regular"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginStart="@dimen/size_15"
                android:layout_marginEnd="@dimen/size_15"
                android:elevation="3dp"
                android:hint="Enter hospital location"
                android:inputType="text"
                android:paddingStart="@dimen/size_15"
                android:paddingEnd="@dimen/size_5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginStart="@dimen/size_15"
                android:textColor="@color/colorDarkGrey"
                android:textSize="@dimen/small_text"
                android:text="Write a short description"/>

            <EditText
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_100"
                android:background="@drawable/bg_white_5"
                android:gravity="start"
                android:fontFamily="@font/regular"
                android:layout_marginTop="@dimen/size_5"
                android:paddingTop="@dimen/size_10"
                android:layout_marginStart="@dimen/size_15"
                android:layout_marginEnd="@dimen/size_15"
                android:elevation="3dp"
                android:hint="Write something about the patient"
                android:paddingStart="@dimen/size_15"
                android:paddingEnd="@dimen/size_5"/>

            <RelativeLayout
                android:id="@+id/post_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginTop="@dimen/size_25"
                android:layout_marginBottom="@dimen/size_15"
                android:layout_marginStart="@dimen/size_15"
                android:layout_marginEnd="@dimen/size_15"
                android:background="@drawable/bg_green_5">

                <TextView
                    android:id="@+id/btn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/normal_text"
                    android:text="Post Now"/>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:visibility="gone"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:indeterminateTint="@color/colorDarkGrey"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.InfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_15"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold"
                android:textColor="@color/colorLightRed"
                android:textSize="@dimen/large_text"
                android:text="Enter your details"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_15">

                <TextView
                    android:layout_width="@dimen/size_80"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_left_bg"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Name"/>

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_right_bg"
                    android:paddingStart="@dimen/size_15"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/small_text"
                    android:paddingEnd="@dimen/size_5"
                    android:hint="Fullname"
                    android:inputType="text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/size_10">

                <TextView
                    android:layout_width="@dimen/size_80"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_left_bg"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Location"/>

                <EditText
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_right_bg"
                    android:paddingStart="@dimen/size_15"
                    android:fontFamily="@font/regular"
                    android:textSize="@dimen/small_text"
                    android:paddingEnd="@dimen/size_5"
                    android:hint="Enter your location"
                    android:inputType="text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/bg_light_grey_5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:background="@drawable/bg_light_red_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Blood Group"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_15"
                    android:paddingStart="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bg_a_p"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_text"
                        android:text="A+"/>

                    <TextView
                        android:id="@+id/bg_a_n"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_text"
                        android:text="A-"/>

                    <TextView
                        android:id="@+id/bg_b_p"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_text"
                        android:text="B+"/>

                    <TextView
                        android:id="@+id/bg_b_n"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:background="@drawable/storke_grey_5"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_text"
                        android:text="B-"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_15"
                    android:layout_marginBottom="@dimen/size_10"
                    android:paddingStart="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bg_ab_p"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_text"
                        android:text="AB+"/>

                    <TextView
                        android:id="@+id/bg_ab_n"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_text"
                        android:text="AB-"/>

                    <TextView
                        android:id="@+id/bg_o_p"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_text"
                        android:text="O+"/>

                    <TextView
                        android:id="@+id/bg_o_n"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:background="@drawable/storke_grey_5"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_text"
                        android:text="O-"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:orientation="horizontal"
                android:background="@drawable/bg_light_grey_5"
                android:layout_marginTop="@dimen/size_10">

                <TextView
                    android:layout_width="@dimen/size_80"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_light_red_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Gender"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/size_40"
                    android:paddingEnd="@dimen/size_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/male"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_text"
                        android:text="Male"/>

                    <TextView
                        android:id="@+id/female"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:background="@drawable/storke_grey_5"
                        android:gravity="center"
                        android:fontFamily="@font/regular"
                        android:textColor="@color/colorGrey"
                        android:textSize="@dimen/small_text"
                        android:text="Female"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/bg_light_grey_5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:background="@drawable/bg_light_red_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Date of Birth"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_15"
                    android:layout_marginBottom="@dimen/size_10"
                    android:paddingStart="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5">

                        <Spinner
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/date" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5">

                        <Spinner
                            android:id="@+id/month"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/month" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:background="@drawable/storke_grey_5">

                        <Spinner
                            android:id="@+id/year"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/year" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:background="@drawable/bg_light_grey_5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_50"
                    android:background="@drawable/bg_light_red_5"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="@dimen/small_text"
                    android:text="Last Donation Date"/>

                <CheckBox
                    android:id="@+id/never_donated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginTop="@dimen/size_10"
                    android:text="Never Donated"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorGrey"/>

                <LinearLayout
                    android:id="@+id/ldd_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginBottom="@dimen/size_10"
                    android:paddingStart="@dimen/size_10"
                    android:paddingEnd="@dimen/size_10"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5">

                        <Spinner
                            android:id="@+id/ld_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/date" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:layout_marginEnd="@dimen/size_5"
                        android:background="@drawable/storke_grey_5">

                        <Spinner
                            android:id="@+id/ld_month"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/month" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_40"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_5"
                        android:background="@drawable/storke_grey_5">

                        <Spinner
                            android:id="@+id/ld_year"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/year" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/create_account_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:layout_marginTop="@dimen/size_50"
                android:background="@drawable/bg_green_5">

                <TextView
                    android:id="@+id/btn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="@dimen/normal_text"
                    android:text="Create Account"/>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:visibility="gone"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:indeterminateTint="@color/colorDarkGrey"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".view.fragment.AuthFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/size_15"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/semi_medium_text"
                android:textColor="@color/colorDarkGrey"
                android:text="@string/app_name_bangla"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:textColor="@color/colorGrey"
            android:textSize="@dimen/small_text"
            android:layout_marginTop="@dimen/size_70"
            android:text="Enter your mobile number"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_10">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="match_parent"
                android:background="@drawable/et_left_bg"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorLightGrey"
                android:textSize="@dimen/small_text"
                android:text="+88"/>

            <EditText
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/et_right_bg"
                android:paddingStart="@dimen/size_15"
                android:fontFamily="@font/regular"
                android:textSize="@dimen/small_text"
                android:paddingEnd="@dimen/size_5"
                android:hint="01XXXXXXXXX"
                android:maxLength="11"
                android:inputType="number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_10">

            <TextView
                android:layout_width="@dimen/size_80"
                android:layout_height="match_parent"
                android:background="@drawable/et_left_bg"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorLightGrey"
                android:textSize="@dimen/small_text"
                android:text="OTP"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/otp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:textSize="@dimen/small_text"
                    android:fontFamily="@font/regular"
                    android:background="@drawable/et_right_bg"
                    android:paddingStart="@dimen/size_15"
                    android:paddingEnd="@dimen/size_5"
                    android:hint="123456"
                    android:maxLength="6"
                    android:inputType="number"/>

                <TextView
                    android:id="@+id/otp_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/et_right_bg"
                    android:fontFamily="@font/regular"
                    android:gravity="center_vertical"
                    android:hint="123456"
                    android:paddingStart="@dimen/size_15"
                    android:paddingEnd="@dimen/size_5"
                    android:textSize="@dimen/small_text" />

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginTop="@dimen/size_50"
            android:background="@drawable/bg_light_red_10">

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/bold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/normal_text"
                android:text="Login"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:visibility="gone"
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:indeterminateTint="@color/colorWhite"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>